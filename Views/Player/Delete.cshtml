@model EquiposPeruanos.Models.Player

<h2>Eliminar Jugador</h2>

<div class="alert alert-danger">
    <p>¿Estás seguro de que deseas eliminar a este jugador?</p>
</div>

<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>

    <dt class="col-sm-2">Edad</dt>
    <dd class="col-sm-10">@Model.Edad</dd>

    <dt class="col-sm-2">Posición</dt>
    <dd class="col-sm-10">@Model.Posicion</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
