@model IEnumerable<EquiposPeruanos.Models.Team>

<h2>Lista de Equipos</h2>

<a asp-action="Create" class="btn btn-success">Nuevo Equipo</a>

<table class="table table-bordered mt-3">
    <thead class="table-light">
        <tr>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
