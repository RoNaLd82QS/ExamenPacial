@model EquiposPeruanos.Models.Assignment

<h2>Asignar Jugador a Equipo</h2>

<form asp-action="Create">
    <div class="form-group mb-3">
        <label for="PlayerId">Jugador:</label>
        <select asp-for="PlayerId" class="form-control" asp-items="ViewBag.PlayerId"></select>
        <span asp-validation-for="PlayerId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="TeamId">Equipo:</label>
        <select asp-for="TeamId" class="form-control" asp-items="ViewBag.TeamId"></select>
        <span asp-validation-for="TeamId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Asignar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
